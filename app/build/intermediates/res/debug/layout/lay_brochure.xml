<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:id="@+id/ll_unlogged_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical" >

        <fragment
         
            android:id="@+id/fragment_unlogged"
            android:name="com.mycollege.mait.MAIT_AboutMait"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            tools:layout="@layout/lay__mait_aboutmait">
        </fragment>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_unlogged_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="#fff" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal|vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/b_br_about_mait"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/color_1"
                    android:fadingEdge="horizontal|vertical"
                    android:gravity="center"
                    android:onClick="click"
                    android:padding="10dp"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="About\nMAIT"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b_br_campus_drive"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/color_5"
                    android:fadingEdge="horizontal|vertical"
                    android:gravity="center"
                    android:onClick="click"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Campus\nDrive"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b_br_achievements"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/color_3"
                    android:fadingEdge="horizontal|vertical"
                    android:gravity="center"
                    android:onClick="click"
                    android:padding="10dp"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Achievements"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b_br_adm_pro"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/color_4"
                    android:fadingEdge="horizontal|vertical"
                    android:gravity="center"
                    android:onClick="click"
                    android:padding="10dp"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Admission\nProcess"
                        android:textColor="#fff"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b_br_location"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/color_2"
                    android:fadingEdge="horizontal|vertical"
                    android:gravity="center"
                    android:onClick="click"
                    android:padding="10dp"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Location"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b_br_placement"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/color_6"
                    android:fadingEdge="horizontal|vertical"
                    android:gravity="center"
                    android:onClick="click"
                    android:padding="10dp"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Placemennt"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

